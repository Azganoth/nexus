{
  "exclude": ["node_modules"],
  "extends": "@repo/typescript-config/next.json",
  "compilerOptions": {
    "outDir": "dist",
    "plugins": [{ "name": "next" }],
    "paths": {
      "@app/*": ["./src/app/*"],
      "@lib/*": ["./src/lib/*"],
      "@components/*": ["./src/components/*"],
      "@styles/*": ["./src/styles/*"],
      "@images/*": ["./src/images/*"],
      "@src/*": ["./src/*"]
    }
  },
  "include": [
    "src",
    "next.config.ts",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "jest.setup.ts"
  ]
}
